<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/space_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="5sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/b_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/block_start"
            android:gravity="center"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/space_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/b_while"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/block_while"
            android:gravity="center"
            android:text="WHILE"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/space_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/b_if"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/block_while"
            android:gravity="center"
            android:text="IF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/space_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/b_var"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/block_while"
            android:gravity="center"
            android:text="var a"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/space_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            tools:ignore="SmallSp" />


        <TextView
            android:id="@+id/b_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/block_value"
            android:gravity="center"
            android:text="'value'"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/space_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/b_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/block_while"
            android:gravity="center"
            android:text="Print"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/space_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/space"
            android:gravity="center"
            android:text=""
            android:textSize="10sp"
            tools:ignore="SmallSp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>